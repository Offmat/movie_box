<h3>Rate '<%= @movie.title %>'</h3>
<%= render "common/error_messages_overrided", model: @opinion %>
<%= form_for [@movie, @opinion] do |f| %>
  <p>
    <%= f.label :score %>
    <%= f.number_field :score, in: 0..10 %>
  </p>
  <p>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit "Rate" %>
  </p>
<% end %>
