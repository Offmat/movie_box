<h3>
  Title: <%= @movie.title %>
</h3>
<p>
  Release date: <%= @movie.release_date || 'unknown' %>
</p>
<p>
  Duration: <%= @movie.duration&.strftime "%H:%M:%S" || 'unknown' %>
</p>
<p>
  Info: <%= @movie.info %>
</p>
<p>
  Genres: <% @movie.genres.each do |genre| %>
            <%= genre + ", " %>
          <% end %>
</p>
<p>
  Countries: <%= @movie.countries %>
</p>
<p>
  <%= link_to "Edit", edit_movie_path(@movie) %>
  <%= link_to "Delete", @movie, method: :delete,
      data: { confirm: "Do you want to delete #{@movie.title}?" } %>
</p>
<%= link_to "Back", movies_path %>
