<%= form_for @movie do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :release_date %>
  <%= f.text_field :release_date %>

  <%= f.label :duration, "Duration (HH:MM:SS)" %>
  <%= f.text_field :duration %>

  <%= f.label :info, "Movie description" %>
  <%= f.text_area :info %>

  <%= f.label :genres %>
  <%= f.text_field :genres %>

  <%= f.label :countries %>
  <%= f.text_field :countries %>

  <%= f.submit %>

<% end %>
