<%= form_for @movie do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :release_date, "Release date (YYYY-MM-DD) " %>
  <%= f.text_field :release_date %>

  <%= f.label :duration, "Duration (HH:MM:SS)" %>
  <%= f.text_field :duration %>

  <%= f.label :info, "Movie description" %>
  <%= f.text_area :info %>

  <%= f.label :genres %>
  <%= f.text_field :genres %>

  <%= f.label :countries %>
  <%= f.text_field :countries %>

  <%= fields_for :director do |director_field| %>

    <%= director_field.label :name, "Director name" %>
    <%= director_field.text_field :name %>

    <%= director_field.label :surname, "Director surname" %>
    <%= director_field.text_field :surname %>

  <% end %>

  <%= fields_for :writer do |writer_field| %>

    <%= writer_field.label :name, "Writer name" %>
    <%= writer_field.text_field :name %>

    <%= writer_field.label :surname, "Writer surname" %>
    <%= writer_field.text_field :surname %>

  <% end %>

  <%= f.submit %>

<% end %>
